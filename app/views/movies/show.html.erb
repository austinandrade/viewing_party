<h1> Welcome <%= current_user.email %>! </h1>
<%= button_to "Create Viewing Party For #{@movie.title}", new_viewing_party_path, method: :get %>

<h3> <%= @movie.title %> </h3>
<h3> Vote Average: <%= @movie.vote_average %> </h3>
<h3> Summary: <%= @movie.summary %> </h3>
<h3> Runtime: <%= @movie.runtime %> </h3>
<h3> Genres: <%= @movie.genres %> </h3>

<h3> Cast </h3>
<% @movie.cast.each do |actor_and_character| %>
  <%= actor_and_character %> <br>
<% end %>

<h3> Review Count: <%= @movie.review_count %> </h3>
 <% @movie.reviews.each do |author, review| %>
 <section id="review">
   <h2 class='author'>
     Author: <%= author %>
  </h2>
    <h3 class='review'>
     <%= review %>
    </h3>
</section>
 <% end %>
